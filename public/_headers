# Security Headers Configuration
# New York Minute NYC E-Commerce Platform
# Built by WebFlow Studios Team (2024)
# Security Engineer: Aisha Kumar
# Contact: contact@webflowstudios.dev

# Global security headers
/*
  # Content Security Policy - Restrict resource loading
  # Updated: 2025-01-28 - Fixed to allow all Supabase subdomains (*.supabase.co) for Edge Functions, Realtime, and Storage
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.supabase.co https://api.mapbox.com https://events.mapbox.com https://*.mapbox.com https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://api.mapbox.com https://*.mapbox.com; img-src 'self' data: https: blob:; font-src 'self' https://fonts.gstatic.com data: https://api.mapbox.com https://*.mapbox.com; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://api.mapbox.com https://events.mapbox.com https://*.mapbox.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; object-src 'none'; upgrade-insecure-requests;
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Enable XSS protection
  X-XSS-Protection: 1; mode=block
  
  # Prevent clickjacking
  X-Frame-Options: DENY
  
  # Referrer policy - don't leak URL info
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions policy - restrict browser features
  Permissions-Policy: geolocation=(self), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()
  
  # HSTS - Force HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Remove server identification
  X-Powered-By: WebFlow-Studios/3.0
  Server: WebFlow-CDN
  
  # Hide technology stack
  X-Technology-Stack: React/Next.js
  X-Build-Version: 3.0.0
  X-Deploy-Region: us-east-1

# HTML files - no caching to prevent stale code
/*.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# JavaScript files - short cache with validation
/*.js
  Cache-Control: public, max-age=3600, must-revalidate

# Static assets - aggressive caching
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images - cache but allow revalidation  
/products/*
  Cache-Control: public, max-age=604800, stale-while-revalidate=86400

# Service Worker - no cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - short cache
/manifest.json
  Cache-Control: public, max-age=3600

# Admin routes - extra security
/admin/*
  X-Robots-Tag: noindex, nofollow, noarchive, nosnippet
  Cache-Control: no-store, no-cache, must-revalidate, private
  Referrer-Policy: no-referrer

/courier/*
  X-Robots-Tag: noindex, nofollow, noarchive, nosnippet
  Cache-Control: no-store, no-cache, must-revalidate, private
  Referrer-Policy: no-referrer
